pipeline{
    agent any

    stages{
        stage("Test"){
            steps{
                // mvn test
                echo "========always========"
                
            }
        }
        stage("Build"){
            steps{
                //mvn install
                echo "========always========"
                
            }
        }
        stage("Deploy on Test Server"){
            steps{
                // Deploy on container --> plugin
                echo "========always========"
               
            }
        }
        stage("Deploy on Prod Server"){
            input {
                message "Should we continue?"
                ok "Yes, we should."
            }
            steps{
                 // Deploy on container --> plugin
                echo "========always========"
            }
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
